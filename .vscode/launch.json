{
    // This is an example of how to create a vscode launcher to debug
    // an ec command line invocation. Note that cwd needs to be a valid
    // generic IOC folder for this to work.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ec dev build ",
            "type": "python",
            "request": "launch",
            "module": "epics_containers_cli.__main__",
            "justMyCode": false,
            "args": [
                "dev",
                "build"
            ],
            "cwd": "/scratch/hgv27681/work/ioc-pmac"
        },
        {
            "name": "Debug Unit Test",
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                // The default config in pyproject.toml's "[tool.pytest.ini_options]" adds coverage.
                // Cannot have coverage and debugging at the same time.
                // https://github.com/microsoft/vscode-python/issues/693
                "PYTEST_ADDOPTS": "--no-cov"
            },
        }
    ]
}